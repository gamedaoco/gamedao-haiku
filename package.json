{
  "name": "gamedao-haiku",
  "private": true,
  "engines": {
    "node": ">=14"
  },
  "workspaces": [
    "pkg/*"
  ],
  "scripts": {
    "setup": "yarn && wsrun -s -c install",
    "dev": "wsrun -p @gamedao-haiku/app -c dev",
    "build": "wsrun -e -c -s -x -m build",
    "test": "wsrun -e -c -s --exclude-missing test",
    "release": "yarn build && yarn changeset publish",
    "format": "prettier --write --check pkg/**/*.{ts,tsx}",
    "format:verify": "prettier --check pkg/**/*.{ts,tsx}"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@changesets/cli": "^2.17.0",
    "wsrun": "^5.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@commitlint/prompt-cli": "^16.1.0",
    "@picgo/bump-version": "^1.0.3",
    "commitizen": "^4.2.3",
    "concurrently": "^7.0.0",
    "conventional-changelog": "^3.1.24",
    "cz-customizable": "^6.2.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./node_modules/@picgo/bump-version/.cz-config.js"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn format:verify"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
