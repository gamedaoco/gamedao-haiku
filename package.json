{
  "name": "gamedao-haiku",
  "description": "a monorepo for gamedao dapps",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=16"
  },
  "packageManager": "yarn@1.19.0",
  "workspaces": [
    "pkg/*"
  ],
  "scripts": {
    "setup": "yarn && wsrun -s -c install",
    "dev": "wsrun -p @gamedao/app -c dev",
    "build": "wsrun -e -c -s -x -m build",
    "test": "wsrun -e -c -s --exclude-missing test",
    "release": "yarn build && yarn changeset publish",
    "format": "prettier --parser babel-ts --write --check pkg/**/*.{ts,tsx}",
    "format:verify": "prettier --parser babel-ts --check pkg/**/*.{ts,tsx}",
    "format:staged": "pretty-quick --staged --pattern 'pkg/**/*.{ts,tsx}'",
    "lint": "yarn lint:app",
    "lint:app": "yarn eslint 'pkg/app/src'",
    "build:graphql": "yarn workspace @gamedao/app generate",
    "build:frontend": "yarn workspace @gamedao/app build",
    "prod:frontend": "yarn npm-run-all -s build:graphql build:frontend",
    "commit": "git-cz",
    "analyze": "ANALYZE=true wsrun -p @gamedao/app -c build",
    "sb": "wsrun -p @gamedao/app -c sb",
    "build:sb": "wsrun -p @gamedao/app -c build:sb",
    "reset": "rm -rf node_modules && rm -rf pkg/**/node_modules"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@changesets/cli": "^2.23.2",
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@commitlint/cz-commitlint": "^17.1.2",
    "@picgo/bump-version": "^1.0.3",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "commitizen": "^4.2.5",
    "conventional-changelog": "^3.1.24",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.9.1",
    "eslint": "^8.27.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-storybook": "^0.6.7",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "wsrun": "^5.2.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "yarn format"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "rules": {
      "@next/next/no-img-element": "off"
    }
  }
}
